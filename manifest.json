{
    "manifest_version": 3,
    "name": "Carousell Phone Finder",
    "version": "1.0.0",
    "description": "Find the best value iPhone deals on Carousell Singapore with smart scoring",
    "permissions": ["activeTab", "storage", "scripting"],
    "host_permissions": ["https://www.carousell.sg/*"],
    "action": {
          "default_popup": "popup.html",
          "default_icon": {
                  "16": "icons/icon16.png",
                  "48": "icons/icon48.png",
                  "128": "icons/icon128.png"
          }
    },
    "content_scripts": [{
          "matches": ["https://www.carousell.sg/*"],
          "js": ["content.js"],
          "css": ["content.css"]
    }],
    "icons": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
    }
}
